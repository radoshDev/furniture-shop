{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"target": "es5",
		"strict": true,
		"allowJs": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
